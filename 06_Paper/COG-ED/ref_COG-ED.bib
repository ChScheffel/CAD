  keywords = {Need for cognition, Iowa Gambling Task, Risky decision making},
  url      = {http://www.sciencedirect.com/science/article/pii/S0191886911001425},
  urldate  = {2018-03-05},
}

@Article{Zhong2011,
  author     = {Bu Zhong and Marie Hardin and Tao Sun},
  journal    = {Computers in Human Behavior},
  title      = {Less effortful thinking leads to more social networking? The associations between the use of social network sites and personality traits},
