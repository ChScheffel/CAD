@Article{Appels1997,
  author     = {Appels, A. and Siegrist, J. and Vos, Y. De},
  journal    = {Stress Medicine},
  title      = {‘{Chronic} {Workload}’, ‘{Need} for {Control}’ and ‘{Vital} {Exhaustion}’ in patients with myocardial infarction and iontrols: {A} comparative test of cardiovascular risk profiles},
