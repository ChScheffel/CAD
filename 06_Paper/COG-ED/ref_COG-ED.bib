@Article{Valiente2003,
  author     = {Valiente, C. and Eisenberg, N. and Smith, C. L. and Reiser, M. and Fabes, R. A. and Losoya, S. and Guthrie, I. K. and Murphy, B. C.},
  journal    = {Journal of Personality},
  title      = {The relations of effortful control and reactive control to children's externalizing problems: {A} longitudinal assessment},
