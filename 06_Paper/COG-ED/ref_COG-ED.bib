@Article{Yuan2015,
  author     = {Yuan, Jia Jin and Long, Quan Shan and Ding, Nan Xiang and Lou, Yi Xue and Liu, Ying Ying and Yang, Jie Min},
  journal    = {Science China Life Sciences},
  title      = {Suppression dampens unpleasant emotion faster than reappraisal: {Neural} dynamics in a {Chinese} sample},
