@Article{Cramer2016,
  author   = {Cramer, Robert J. and Bryson, Claire N. and Gardner, Brett O. and Webber, Wesley B.},
  journal  = {Death Studies},
  title    = {Can preferences in information processing aid in understanding suicide risk among emerging adults?},
  year     = {2016},
  issn     = {0748-1187},
