  title      = {Error detection in patients with lesions to the medial prefrontal cortex: {An} {ERP} study},
  year       = {2004},
  issn       = {0028-3932},
  month      = jan,
  note       = {Number: 1},
  number     = {1},
  pages      = {118--130},
  volume     = {42},
  abstract   = {When people detect their own errors in a discrimination task, a negative-going waveform can be observed in scalp-recorded EEG that has been coined the error-related negativity (Ne/ERN). Generation of the Ne/ERN has been associated with structures in the prefrontal cortex, especially the anterior cingulate region, but also the supplementary motor cortex and subcortical structures. There is some controversy as to whether the Ne/ERN is a necessary concomitant to error detection. We examined the Ne/ERN in five patients with damage to the medial prefrontal cortex, including the anterior cingulate region. Our findings support the implication of the rostral anterior cingulate in Ne/ERN production, but they also show that subjects can be aware of errors and yet not produce an Ne/ERN. Thus, error detection leads to the Ne/ERN process and damage to the anterior cingulate region may interrupt this relay, suggesting that error detection may be supported by circuits outside the anterior cingulate region.},
  doi        = {10.1016/S0028-3932(03)00121-0},
  keywords   = {Prefrontal cortex, Anterior cingulate, Conscious control, ERP, Ne/ERN, Error awareness, Error detection, Error negativity},
  language   = {en},
  shorttitle = {Error detection in patients with lesions to the medial prefrontal cortex},
  url        = {http://www.sciencedirect.com/science/article/pii/S0028393203001210},
  urldate    = {2020-09-15},
}

@Article{Eimer2002,
  author   = {Eimer, Martin and Holmes, Amanda},
  journal  = {NeuroReport},
  title    = {An {ERP} study on the time course of emotional face processing},
