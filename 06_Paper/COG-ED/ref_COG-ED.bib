  series   = {Emotional intelligence: {Research} and {Applications}},
  url      = {http://www.sciencedirect.com/science/article/pii/S0191886914000488},
  urldate  = {2020-08-14},
}

@Article{Kelley2019,
  author     = {Kelley, Nicholas J. and Hughes, Matthew L.},
  journal    = {Psychology and Aging},
