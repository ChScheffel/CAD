  language   = {en},
  shorttitle = {Development of robust, fast and efficient {QRS} complex detector},
  urldate    = {2020-10-26},
}

@Article{Bradley2001,
  author     = {Bradley, Margaret M. and Codispoti, Maurizio and Cuthbert, Bruce N. and Lang, Peter J.},
  journal    = {Emotion},
  title      = {Emotion and motivation {I}: {Defensive} and appetitive reactions in picture processing},
  year       = {2001},
  issn       = {1931-1516(ELECTRONIC),1528-3542(PRINT)},
  note       = {Number: 3 Place: US Publisher: American Psychological Association},
  number     = {3},
  pages      = {276--298},
  volume     = {1},
  abstract   = {Emotional reactions are organized by underlying motivational states--defensive and appetitive--that have evolved to promote the survival of individuals and species. Affective responses were measured while participants viewed pictures with varied emotional and neutral content. Consistent with the motivational hypothesis, reports of the strongest emotional arousal, largest skin conductance responses, most pronounced cardiac deceleration, and greatest modulation of the startle reflex occurred when participants viewed pictures depicting threat, violent death, and erotica. Moreover, reflex modulation and conductance change varied with arousal, whereas facial patterns were content specific. The findings suggest that affective responses serve different functions--mobilization for action, attention, and social communication--and reflect the motivational system that is engaged, its intensity of activation, and the specific emotional context. (PsycINFO Database Record (c) 2016 APA, all rights reserved)},
