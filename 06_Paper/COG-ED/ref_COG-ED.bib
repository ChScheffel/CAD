  keywords = {Abstinence, Personality traits, Smoking cessation, Smoking withdrawal, Tridimensional Personality Questionnaire},
  url      = {http://www.sciencedirect.com/science/article/pii/S0306460315300629},
  urldate  = {2019-09-20},
