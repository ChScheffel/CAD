@InCollection{Attig2019,
  author     = {Attig, Christiane and Karp, Alexa and Franke, Thomas},
  booktitle  = {Proceedings of the 20th {Congress} of the {International} {Ergonomics} {Association} (iea 2018), {Vol} {V}: {Human} {Simulation} and {Virtual} {Environments}, {Work} with {Computing} {Systems} (wwcs), {Process} {Control}},
