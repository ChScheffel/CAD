  keywords = {negative affect, responses, cognitive reappraisal, individual-differences, Emotion regulation, Eyeblink startle, affective neuroscience, Corrugator EMG, perspectives, psychophysiological measures, startle modulation, stimuli, Test-retest reliability, unpleasant pictures},
