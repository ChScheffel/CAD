  language   = {English},
  shorttitle = {Preferences in {Information} {Processing}},
}

@Article{Cramer2020a,
  author     = {Cramer, Robert J. and Langhinrichsen-Rohling, Jennifer and Kaniuka, Andrea R. and Wilsey, Corrine N. and Mennicke, Annelise and Wright, Susan and Montanaro, Erika and Bowling, Jessamyn and Heron, Kristin E.},
  journal    = {International Journal of Environmental Research and Public Health},
