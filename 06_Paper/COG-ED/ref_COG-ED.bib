@Article{Davis2018,
  author    = {Davis, Elena Goetz and Keller, Jennifer and Hallmayer, Joachim and Pankow, Heather Ryan and Murphy, Greer M. and Gotlib, Ian H. and Schatzberg, Alan F.},
  journal   = {Translational Psychiatry},
  title     = {Corticotropin-releasing factor 1 receptor haplotype and cognitive features of major depression},
  year      = {2018},
  issn      = {2158-3188},
